<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <PropertyGroup>
    <ApplicationIcon>./asset/icon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Svg.Skia" Version="2.0.0.4" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="./asset/AUTOHIDE.svg">
      <LogicalName>AUTOHIDE.svg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="./asset/ALWAYSONTOP.svg">
      <LogicalName>ALWAYSONTOP.svg</LogicalName>
    </EmbeddedResource>
  </ItemGroup>
</Project>